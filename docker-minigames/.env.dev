# Development Configuration with Local MongoDB
COMPOSE_PROFILES=local-dev
ENVIRONMENT=development

# MongoDB Container Settings (Consistent credentials)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=devpassword123
MONGO_INIT_DB=docker_quiz_game_dev
MONGO_PORT=27017

# Application Database Connection (Use service name 'mongodb' instead of localhost)
MONGODB_URL=mongodb://admin:devpassword123@mongodb:27017/docker_quiz_game_dev?authSource=admin
DB_NAME=docker_quiz_game_dev

# Service Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# MongoDB Performance Settings (Relaxed for development)
MONGODB_TIMEOUT=5000
MONGODB_POOL_SIZE=5

# Frontend Configuration
REACT_APP_BACKEND_URL=http://localhost:8000

# Development specific settings
RELOAD=true
